{
  "productName": "WeRead",
  "identifier": "com.pake.weread",
  "version": "1.0.0",
  "app": {
    "withGlobalTauri": true,
    "trayIcon": {
      "iconPath": "png/weread_512.png",
      "iconAsTemplate": false,
      "id": "pake-tray"
    }
  },
  "build": {
    "frontendDist": "../dist"
  },
  "tauri": {
    "allowlist": {
      "all": true, 
      "fs": {
        "readFile": true,
        "writeFile": true
      }
    },
    "security": {
      "csp": "default-src 'self'"
    }
  }
}
